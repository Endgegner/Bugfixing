<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Proper Meals Complete, Exquisite, Lunch Pack -->
  <RecipeDef ParentName="CookMealBase">
    <defName>CookMealComplete</defName>
    <label>cook complete meal</label>
    <description>Cooks a complete meal from a combination of bread, cheese, meat, vegetables, fruit, and spices.</description>
    <jobString>Cooking exquisite meal.</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
	<workSkill>Cooking</workSkill>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>True</allowMixingIngredients>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
	<recipeUsers>
	    <li>FueledStove</li> <!-- Patch: all other Places, RC1:  -->
        <li>ElectricStove</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>MeatRaw</li>
          </categories>
        </filter>
        <count>0.25</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>AnimalProductRaw</li> <!-- GrainsRaw VegetablesRaw FruitRaw -->
          </categories>
        </filter>
        <count>0.25</count>
      </li>
	  <li>
        <filter>
          <categories>
            <li>PlantFoodRaw</li> <!-- VegetablesRaw -->
          </categories>
        </filter>
        <count>0.5</count>
	  </li>
    </ingredients>
    <products>
      <MealComplete>1</MealComplete>
    </products>
    <skillRequirements>
      <Cooking>16</Cooking>
    </skillRequirements>
	<researchPrerequisite>Devilstrand</researchPrerequisite>
  </RecipeDef>

  <RecipeDef ParentName="CookMealBase">
    <defName>CookMealExquisite</defName>
    <label>cook exquisite meal</label>
    <description>Cooks an exquisite meal from a combination of meat, grains, vegetables, fruit, and spices. Some of the ingredients are wasted during the cooking process. Completely worth it though.</description>
    <jobString>Cooking exquisite meal.</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
	<workSkill>Cooking</workSkill>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>True</allowMixingIngredients>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
	<recipeUsers>
	    <li>FueledStove</li> <!-- Patch: all other Places, RC1:  -->
        <li>ElectricStove</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>MeatRaw</li>
          </categories>
        </filter>
        <count>0.5</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>AnimalProductRaw</li> <!-- GrainsRaw -->
          </categories>
        </filter>
        <count>0.5</count>
      </li>
	  <li>
        <filter>
          <categories>
            <li>PlantFoodRaw</li> <!-- FruitRaw -->
          </categories>
        </filter>
        <count>0.5</count>
	  </li>
    </ingredients>
    <products>
      <MealExquisite>1</MealExquisite>
    </products>
    <skillRequirements>
      <Cooking>14</Cooking>
    </skillRequirements>
	<researchPrerequisite>Cocoa</researchPrerequisite>
  </RecipeDef>

  <RecipeDef ParentName="CookMealBase">
    <defName>LunchPack_MealSurvival</defName>
    <label>make lunch package</label>
    <description>Prepare a packaged survival meal from a combination of bread and cheese, meat or eggs. An Apple for some vitamin C can be added too.</description>
    <jobString>Cooking survival meal.</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
	<workSkill>Cooking</workSkill>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
	<recipeUsers>
	    <li>FueledStove</li> <!-- Patch: all other Places, RC1:  -->
        <li>ElectricStove</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
		  <thingDefs>
			<li>Milk</li> <!-- IAmHungryCheese -->
		  </thingDefs>
        </filter>
        <count>1</count>
      </li>
	  <li>
		<filter>
		  <thingDefs>
			<li>IAmHungry_Flour</li> <!-- IAmHungryBread -->
		  </thingDefs>
		</filter>
		<count>1</count>
	  </li>
      <li>
        <filter>
          <categories>
            <li>MeatRaw</li>
            <li>EggsUnfertilized</li>
          </categories>
        </filter>
        <count>20</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>PlantFoodRaw</li> <!-- Patch: Apple -->
          </categories>
        </filter>
        <count>20</count>
      </li>
    </ingredients>
    <products>
	  <PackedLunch>1</PackedLunch>
    </products>
    <skillRequirements>
	  <Cooking>12</Cooking>
    </skillRequirements>
    <researchPrerequisite>PackagedSurvivalMeal</researchPrerequisite>
  </RecipeDef>

</Defs>